algoritmo "FuncaoSoma"
var

   V1, V2, S : inteiro

  funcao soma (X, Y : inteiro) : inteiro

         retorne X + Y
  
  fimfuncao
   
inicio

      escreval ("Digite um número: ")
      leia (V1)
      escreval ("Digite outro número: ")
      leia (V2)
      S <- soma (V1, V2)
      escreval ("SOMA TOTAL: ", S)

fimalgoritmo